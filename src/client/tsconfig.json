{
  "compilerOptions": {
    "baseUrl": "src",
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["es5", "es6", "dom", "esnext"],
    "jsx": "react",
    "allowJs": true,
    "types": []
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.js"
  ]
}
